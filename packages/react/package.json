{
  "name": "@codespark/react",
  "version": "1.0.4",
  "type": "module",
  "description": "React components for codespark ecosystem",
  "keywords": [
    "react-components",
    "code-editor",
    "live-preview",
    "codespark"
  ],
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./*": {
      "import": "./dist/*.js",
      "types": "./dist/*.d.ts"
    },
    "./index.css": {
      "style": "./dist/index.css",
      "import": "./dist/index.css"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsdown"
  },
  "author": "TonyL1u",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/codesparkjs/codespark.git",
    "directory": "packages/react"
  },
  "homepage": "https://codesparkjs.com",
  "dependencies": {
    "@codemirror/lang-javascript": "^6.2.4",
    "@codemirror/lang-markdown": "^6.5.0",
    "@codemirror/language-data": "^6.5.2",
    "@codespark/framework": "^1.0.0",
    "@monaco-editor/react": "^4.7.0",
    "@shikijs/monaco": "^3.20.0",
    "@uiw/react-codemirror": "^4.25.4",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "lodash-es": "^4.17.23",
    "lucide-react": "^0.562.0",
    "prettier": "^3.7.4",
    "radix-ui": "^1.4.3",
    "react": "^19.2.3",
    "react-dom": "^19.2.3",
    "react-is": "^19.2.3",
    "shiki": "^3.20.0",
    "tailwind-merge": "^3.4.0",
    "tailwindcss": "^4.1.18"
  },
  "devDependencies": {
    "@types/lodash-es": "^4.17.12",
    "@types/mdx": "^2.0.13",
    "@types/node": "^22.19.2",
    "@types/react": "^19.2.7",
    "@types/react-is": "^19.2.0",
    "monaco-editor": "^0.55.1",
    "rollup-plugin-import-raw": "^1.0.2",
    "tsdown": "^0.17.3"
  }
}