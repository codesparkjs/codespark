{
  "name": "@codespark/framework",
  "version": "1.0.1",
  "type": "module",
  "description": "Framework registration API for codespark ecosystem",
  "keywords": [
    "framework-system",
    "react",
    "markdown",
    "html",
    "codespark"
  ],
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./*": {
      "import": "./dist/*.js",
      "types": "./dist/*.d.ts"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsdown",
    "test": "vitest run",
    "release": "pnpm build && npm publish --access public"
  },
  "author": "TonyL1u",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/codesparkjs/codespark.git",
    "directory": "packages/framework"
  },
  "homepage": "https://codesparkjs.com",
  "dependencies": {
    "@babel/parser": "^7.28.5",
    "@babel/standalone": "^7.28.5",
    "@mdx-js/mdx": "^3.1.1",
    "dom-serializer": "^2.0.0",
    "dompurify": "^3.3.1",
    "htmlparser2": "^10.1.0",
    "magic-string": "^0.30.21",
    "marked": "^17.0.1"
  },
  "devDependencies": {
    "@babel/types": "^7.28.5",
    "@types/babel__standalone": "^7.1.9",
    "@types/node": "^22.19.2",
    "domhandler": "^5.0.3",
    "tsdown": "^0.17.3"
  }
